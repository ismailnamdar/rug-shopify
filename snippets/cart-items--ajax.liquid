{%- if cart != empty -%}
<div class="cart-items cart-items--ajax">
  {%- assign items = cart.items | sort: 'selling_plan_allocation' -%}
  {%- for item in items -%}
  {% assign cart_item_type = '-' %}
  {% for p in item.properties %}
      {% if p.first == "plan" or item.selling_plan_allocation != nil %}
        {% assign cart_item_type = 'plan' %}
      {% endif %}
      {% if p.first == "_gift_product" %}
        {% assign cart_item_type = 'gift' %}
      {% endif %}
      {% if p.first == "digital_plan" or p.first == "_limit" %}
        {% assign cart_item_type = 'digital-plan' %}
      {% endif %}
    {% endfor %}
    {% assign is_gwp_product = false %}
    {% for property in item.properties %}
      {% if property contains '_is_gift_with_purchase' %}
        {% assign is_gwp_product = true %}
      {% endif %}
    {% endfor %}
    <div {% if item.product.metafields.subscription.plan != blank  %}data-plan{% endif %}  class="cart-item cart-item--ajax {%if is_gwp_product == true%}is_gwp_product{%endif%}" id="CartItem-{{ item.index | plus: 1 }}">
      <div class="cart-item__container cart-item__container--1">
        <div class="cart-item__media">
          {% if item.image %}
            {% comment %} Leave empty space due to a:empty CSS display: none rule {% endcomment %}
            <a href="{{ item.url }}" class="cart-item__link {% if cart_item_type == 'gift' or cart_item_type == 'plan' %}disabled{% endif %}" aria-hidden="true" tabindex="-1"> </a>
            <img class="cart-item__image"
              src="{{ item.image | img_url: '300x' }}"
              alt="{{ item.image.alt | escape }}"
              loading="lazy"
              width="150"
              height="{{ 150 | divided_by: item.image.aspect_ratio | ceil }}"
            >
          {% endif %}
        </div>
      </div>
      {% assign is_upsell = false %}
      {% if item.product.tags contains "upsell" %}
        {% assign is_upsell = true %}
      {% endif %}

      <div class="cart-item__container cart-item__container--2 {% if is_upsell %} upsell-item {% endif %}">
        <div class="cart-item__details">
          <grid-badges 
            data-compare-at-price="{{item.product.compare_at_price}}" 
            data-price="{{item.product.price}}"
            data-available="{{item.product.available}}"
            data-tags="{{item.product.tags | join: ","}}"
          /></grid-badges>
          <a href="{{ item.url }}" class="cart-item__name break {% if cart_item_type == 'gift' or cart_item_type == 'plan' %}disabled{% endif %}">{{ item.product.title | escape }}</a>

          {%- if item.product.has_only_default_variant == false or item.properties.size != 0 or item.selling_plan_allocation != nil -%}
            <dl>
              {%- if item.product.has_only_default_variant == false -%}
                {%- for option in item.options_with_values -%}
                  <div class="product-option" data-option-value="{{option.value}}">
                    <dt>{{ option.name }}: </dt>
                    <dd>{{ option.value }}</dd>
                  </div>
                {%- endfor -%}
              {%- endif -%}
              {%- comment -%}
              {%- for property in item.properties -%}
                {%- assign property_first_char = property.first | slice: 0 -%}
                {%- if property.last != blank and property_first_char != '_' -%}
                  <div class="product-option">
                    <dt>{{ property.first }}: </dt>
                    <dd>
                      {%- if property.last contains '/uploads/' -%}
                        <a href="{{ property.last }}" target="_blank">
                          {{ property.last | split: '/' | last }}
                        </a>
                      {%- else -%}
                        {{ property.last }}
                      {%- endif -%}
                    </dd>
                  </div>
                {%- endif -%}
              {%- endfor -%}
              {%- endcomment -%}
              {% if item.product.tags contains "pre-order" %}
                <div class="product-option">
                  <dt>Preorder: </dt>
                  <dd>
                    {{item.product.metafields.product_metafields.pre_order_message}}
                  </dd>
                </div>
              {% endif %}
            </dl>
            <p class="product-option">{{ item.selling_plan_allocation.selling_plan.name }}</p>
          {%- endif -%}

          <ul class="discounts list-unstyled" role="list" aria-label="{{ 'customer.order.discount' | t }}">
            {% if item.product.metafields.product_metafields.free_gift_text != blank %}
            <li class="discounts__discount">{{item.product.metafields.product_metafields.free_gift_text}}</li>
            {% endif %}
            {% if is_gwp_product %}
            {% else %}
              {%- for discount in item.discounts -%}
                <li class="discounts__discount">
                  {%- comment -%}
                  {%- render 'icon-discount' -%}
                  {%- endcomment -%}
                  {{ discount.title }}
                </li>
              {%- endfor -%}
            {% endif %}
          </ul>
          <div class="cart-item__error" id="Line-item-error-{{ item.index | plus: 1 }}" role="alert">
            <small class="cart-item__error-text"></small>
          </div>
          {% if item.product.title contains "Raddish+"%}
            {% comment %}
            {% endcomment %}
            <div class="bottom-content">
              <a href="#" data-content-id="club-R-modal" data-learn-more-raddish>Learn more</a>
            </div>
          {% endif %}
        </div>

        {% if item.variant.compare_at_price != blank %}
          <div clas="cart-item__price-wrapper">
            <dl class="cart-item__discounted-prices cart-item__price-inline">
              <dt class="visually-hidden">
                {{ 'products.product.price.regular_price' | t }}
              </dt>
              <dd>
                <s class="cart-item__old-price price price--end">
                  {{ item.product.compare_at_price | money }}
                  {%- comment -%}
                  {{ item.product.compare_at_price | times: item.quantity | money }}
                  {%- endcomment -%}
                </s>
              </dd>
              <dt class="visually-hidden">
                {{ 'products.product.price.sale_price' | t }}
              </dt>
              <dd class="price price--end">
                {{item.product.price | money }}/each SALE
                
                {%- comment -%}
                {{ item.final_line_price | money }} SALE
                {%- endcomment -%}
              </dd>
            </dl>
          </div>
        {% endif %}
        <div class="cart-item__quantity">
          <label class="visually-hidden" for="Quantity-{{ item.index | plus: 1 }}">
            {{ 'products.product.quantity.label' | t }}
          </label>
          {% if cart_item_type == 'plan' or cart_item_type == 'gift' or cart_item_type == 'digital-plan' %}
          <span class="quantity_disabled">{{ item.quantity }}</span>

          {% else %}
          <quantity-input class="quantity">
            
            <button {% if item.quantity == 1 %}disabled="disabled"{% endif %} class="quantity__button no-js-hidden" name="minus" type="button">
              {% render 'icon-minus' %}
            </button>
            <span class="x">x</span>
            <input class="quantity__input"
            {% if item.product.tags contains "upsell" %}disabled{% endif %}
              type="number"
              name="updates[]"
              value="{{ item.quantity }}"
              min="0"
              aria-label="{{ 'products.product.quantity.input_label' | t: product: item.product.title | escape }}"
              id="Quantity-{{ item.index | plus: 1 }}"
              data-index="{{ item.index | plus: 1 }}"
            >
            <button class="quantity__button no-js-hidden" name="plus" type="button" {% if item.product.tags contains "upsell" %}disabled{% endif %}>
              {% render 'icon-plus' %}
            </button>
          </quantity-input>
          {% endif %}
        </div>
      </div>

      <div class="cart-item__container cart-item__container--3"> 
        <div class="cart-item__totals">
          <div class="loading-overlay hidden">
            <div class="loading-overlay__spinner">
              <svg aria-hidden="true" focusable="false" role="presentation" class="spinner" viewBox="0 0 66 66" xmlns="http://www.w3.org/2000/svg">
                <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
              </svg>
            </div>
          </div>
          <div class="cart-item__price-wrapper">
            {%- comment -%}
            {%- if item.original_line_price != item.final_line_price -%}
              {% if is_gwp_product == true %}
                <span class="price price--end">
                  Free
                </span>
              {% else %}
                <dl class="cart-item__discounted-prices">
                  <dt class="visually-hidden">
                    {{ 'products.product.price.regular_price' | t }}
                  </dt>
                  <dd>
                    <s class="cart-item__old-price price price--end">
                      {{ item.original_line_price | money }}
                    </s>
                  </dd>
                  <dt class="visually-hidden">
                    {{ 'products.product.price.sale_price' | t }}
                  </dt>
                  <dd class="price price--end">
                    {{ item.final_line_price | money }}
                  </dd>
                </dl>
              {% endif %}
            {% elsif item.variant.compare_at_price != blank %}
              {% if is_gwp_product == true %}
                <span class="price price--end">
                  Free
                </span>
              {% else %}
                <dl class="cart-item__discounted-prices">
                  <dt class="visually-hidden">
                    {{ 'products.product.price.regular_price' | t }}
                  </dt>
                  <dd>
                    <s class="cart-item__old-price price price--end">
                      {{ item.product.compare_at_price | money }}
                    </s>
                  </dd>
                  <dt class="visually-hidden">
                    {{ 'products.product.price.sale_price' | t }}
                  </dt>
                  <dd class="price price--end">
                    {{ item.final_line_price | money }}
                  </dd>
                </dl>
              {% endif %}
            {%- else -%}
              <span class="price price--end">
                {{ item.original_line_price | money }}
              </span>
            {%- endif -%}
            {%- endcomment -%}
            {% assign tag_compare_at_price = blank %}
            {% for tag in item.product.tags %}
              {% assign tag_downcase = tag | downcase %}
              {% if tag_downcase contains "sale:" %}
                {% assign price_part = tag_downcase | remove: "sale:" | remove: "$" | trim | split: " " | first  %}
                {% assign text_part = tag_downcase | remove: "sale:" | remove: "$" | trim | remove: price_part  %}
                {% assign tag_compare_at_price = price_part | times: 100 %}
              {% endif %}
            {% endfor %}
            {% if tag_compare_at_price != blank %}
              <dl class="cart-item__discounted-prices">
                <dt class="visually-hidden">
                  {{ 'products.product.price.regular_price' | t }}
                </dt>
                <dd>
                  <s class="cart-item__old-price price price--end">
                    {{ item.product.price | money }}
                  </s>
                </dd>
                <dt class="visually-hidden">
                  {{ 'products.product.price.sale_price' | t }}
                </dt>
                <dd class="price price--end">
                  {{ tag_compare_at_price | money }}
                </dd>
              </dl>
            {% elsif item.variant.compare_at_price == blank %}
              {%- if item.original_line_price != item.final_line_price -%}
                {% if is_gwp_product == true %}
                  <span class="price price--end">
                    Free
                  </span>
                {% else %}
                  <dl class="cart-item__discounted-prices">
                    <dt class="visually-hidden">
                      {{ 'products.product.price.regular_price' | t }}
                    </dt>
                    <dd>
                      <s class="cart-item__old-price price price--end">
                        {{ item.original_line_price | money }}
                      </s>
                    </dd>
                    <dt class="visually-hidden">
                      {{ 'products.product.price.sale_price' | t }}
                    </dt>
                    <dd class="price price--end">
                      {{ item.final_line_price | money }}
                    </dd>
                  </dl>
                {% endif %}
              {%- else -%}
                {% if is_gwp_product == true %}
                <span class="price price--end">
                  Free
                </span>
                {% else %}
                <span class="price price--end">
                  {{ item.original_line_price | money }}
                </span>
                {% endif %}
              {%- endif -%}
            {% endif %}

            {%- if item.variant.available and item.unit_price_measurement -%}
              <div class="unit-price caption">
                <span class="visually-hidden">{{ 'products.product.price.unit_price' | t }}</span>
                {{ item.variant.unit_price | money }}
                <span aria-hidden="true">/</span>
                <span class="visually-hidden">&nbsp;{{ 'accessibility.unit_price_separator' | t }}&nbsp;</span>
                {%- if item.variant.unit_price_measurement.reference_value != 1 -%}
                  {{- item.variant.unit_price_measurement.reference_value -}}
                {%- endif -%}
                {{ item.variant.unit_price_measurement.reference_unit }}
              </div>
            {%- endif -%}
          </div>
        </div>
        {% if cart_item_type == "plan"  %}
          {%- comment -%} Change button only used in subscription builders {%- endcomment -%}
          <button type="button" id="plan-change-button" class="button button--tertiary">
            Change
          </button>
        {% endif  %}
        <div class="cart-item__actions">
          {%- comment -%} WISHLIST BUTTON {%- endcomment -%}
          {%- comment -%}
          {% render "wishlist-button", product: item.product, variant: item.variant %}
          {%- endcomment -%}
          {% unless cart_item_type == 'gift' %}
          <cart-remove-button id="Remove-{{ item.index | plus: 1 }}" data-index="{{ item.index | plus: 1 }}">
            <a href="{{ item.url_to_remove }}" class="button button--tertiary" aria-label="{{ 'sections.cart.remove_title' | t: title: item.title }}">
              Remove              
              {%- comment -%}
              {% render 'icon-remove' %}
              {%- endcomment -%}
            </a>
          </cart-remove-button>
          {% endunless %}
        </div>
      </div>
    </div>
  {%- endfor -%}
</div>
{%- endif -%}