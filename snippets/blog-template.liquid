<div class="page-width">
 
  {% section 'camp-home-url' %}
  
  <!--
  <a class="blog-title-link" href="{{% section 'camp-home-url' %}}"><h1 class="heading alt text-center">{{ blog.title }}</h1>{% if current_tags %}</a>{% endif %}
 -->
 
  {% if current_tags %}
 <p class="text-center blog-desc">Viewing {{ current_tags.first }}</p>
  {% else %}
   {% section 'camp-rad-blog-desc' %}


  {% endif %}


  {% paginate blog.articles by 12 %}

  <div class="blog-page flex space flex-start">
    <div class="blog-sidebar">{% include 'camp-rad-sidebar-snippet' %}</div>

    <div class="blog-content">
        <div class="content-table flex wrap">
        {% for article in blog.articles %}
          <a href="{{ article.url }}" class="">
            <div>
              {% if article.image %}
                {{ article | img_url: '1024x1024', crop: 'center' | img_tag: article.title }}
              {% endif %}
              <h3>{{ article.title }}</h3>
            </div>
            <div class="rte">
              {% if article.excerpt.size > 0 %}
                {{ article.excerpt }}
              {% else %}
                <p>
                  {{ article.content | strip_html | truncatewords: 30 }}
                </p>
              {% endif %}
            </div>
          </a>
        {% endfor %}
        <p class="more text-center"><a href="{{ paginate.next.url }}" class="btn">Load More Posts<span></span></a></p> 
      </div>
      {% if paginate.next %}
       <div id="blog-list-foot"></div>       
      {% endif %}
    </div>
  </div>
  {% endpaginate %}
</div>
