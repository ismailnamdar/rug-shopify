{%- assign divider = divider | default: '>' -%}
{%- assign has_divider = has_divider | default: true -%}

{%- if has_divider -%}
	{%- capture divider_html -%}
		<span class="breadcrumbs__divider">{{ divider }}</span>
	{%- endcapture -%}
{%- endif -%}

<nav class="breadcrumbs">
	<a href="{{ settings.breadcumbs_store_link | default: '/' }}" title="{{ 'breadcrumbs.home' | t }}">
		{{ 'breadcrumbs.home' | t }}
	</a>

	{%- if template.name == "product" -%}

		{%- if collection -%}
			{%- if collection.handle -%}
				{{ divider_html }}
				{{ collection.title | link_to: collection.url }}
			{%- endif -%}
		{%- endif -%}
	{%- elsif template.name == "article" -%}
		{{ divider_html }}

		{{ blog.title | link_to: blog.url }}
	{%- endif -%}

	{{ divider_html }}

	<span class="is-current">
		{{- page_title -}}
	</span>
</nav><!-- /.breadcrumbs -->
