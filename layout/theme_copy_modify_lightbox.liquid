<body id="{{ page_title | handle }}" class="template-{{ template.name | handle }}">

  <a class="in-page-link visually-hidden skip-link" href="#MainContent">{{ 'general.accessibility.skip_to_content' | t }}</a>

  {% section 'header' %}

  {% if template contains "product" %}
    {% include 'browse-by-category' %}
  {% endif %}

  <main role="main" id="MainContent">
    {{ content_for_layout }}
  </main>

  {% section 'pre-footer' %}
  {% section 'footer' %}

  <a data-fancybox class="open-popup" style="display: none" data-src="#popup" href="javascript:;"></a>
  <a data-fancybox class="confirmation-popup" style="display: none" data-src="#confirmation-popup" href="javascript:;" data-options='{"touch" : false}'></a>

  <div style="display: none;" id="popup">
  {% section 'popup' %}
  </div>

  <div style="display: none;" id="confirmation-popup">
  {% section 'confirmation-popup' %}
  </div>

  <div style="display: none;" id="mobile-popup">
    {% section 'mobile-popup' %}
