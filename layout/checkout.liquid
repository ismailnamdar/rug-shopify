      <script>
    
        document.addEventListener('page:load', listeners);
        document.addEventListener('page:change', listeners);
    
        function listeners() {
          
          var first_name = document.getElementsByName("checkout[shipping_address][first_name]")[1];
          var first_name_container = document.getElementsByClassName('first_name');
          var last_name_container = document.querySelectorAll('[data-address-field="last_name"]');
          var last_name = document.getElementsByName("checkout[shipping_address][last_name]")[1];
          var first_name_error = document.getElementById('error-for-first_name');
          var last_name_error = document.getElementById('error-for-last_name');
          var productList = document.querySelectorAll('.product__info__name');
    
          for (let i = 0; i < productList.length; i++) {
            var product = productList[i].firstElementChild;
            var productText = product.innerText;
            if(productText.includes("Membership")){
              product.innerText = productText;
            }
          }
    
          first_name.setAttribute('maxlength', '22');
          last_name.setAttribute('maxlength', '13');
    
          first_name.addEventListener('keyup', function (event) {
    
            if (event.target.value.length == 22) {
    
              if(first_name_error.length > 0) {
                first_name_container.appendChild('<p class="field__message field__message--error" id="error-for-last_name">You have reached the 22 character maximum.</p>');
                applyBrandingColor(first_name);
              } else {
                first_name_error.innerHTML = 'You have reached the 22 character maximum.';
                first_name_error.style.display = 'block';
                applyBrandingColor(first_name);
              }
    
            } else {
              first_name_error.style.display = 'none';
              removeBrandingColor(first_name);
            }
    
          });
    
          last_name.addEventListener('keyup', function (event) {
    
            if (event.target.value.length == 13) {
    
              if(last_name_error.length > 0) {
                last_name_container.appendChild('<p class="field__message field__message--error" id="error-for-last_name">You have reached the 13 character maximum.</p>');
                applyBrandingColor(last_name);
              } else {
                last_name_error.innerHTML = 'You have reached the 13 character maximum.';
                last_name_error.style.display = 'block';
                applyBrandingColor(last_name);
              }
    
            } else {
              last_name_error.style.display = 'none';
              removeBrandingColor(first_name);
            }
    
          });
    
        }
        
        function applyBrandingColor(first_name) {
          first_name.style.borderColor = '#ff6d6d';
          first_name.style.boxShadow = '0 0 0 1px #ff6d6d';
        }
        
        function removeBrandingColor(first_name) {
          first_name.style.borderColor = '#d9d9d9';
          first_name.style.boxShadow = 'none';
        }
    
      </script>
