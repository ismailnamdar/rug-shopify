<div class="underlined-description {% unless section.settings.show_mobile %} hidden-xs {% endunless %}{% unless section.settings.show_desktop %}hidden-sm hidden-md hidden-lg{% endunless %}">
  <div class="underlined-description__description">
    {{section.settings.main_description}}
    <hr>
  </div>
</div>


<style>
  .underlined-description__description {
    font-size: 24px;
    font-family: 'Avenir';
    text-align: center;
    margin: 24px 40px;
    font-weight: 400;
    max-width: 690px;
    margin: 6rem auto 8.5rem;
  }

  .underlined-description__description span {
    font-family: 'KG HAPPY Solid';
    font-size: 20px;
    line-height: 24px;
  }

  .underlined-description hr {
    max-width: 400px;
    border-top: 6px dashed #A9DD61;
    margin-top: 2.5rem;
    width: 80%;
    margin-bottom: 3rem;
    height: 2px;
    border-radius: 0;
    border-bottom: none;
    border-left: none;
    border-right: none;
  }

  @media (min-width: 768px) {
    .underlined-description__description {
      font-size: 34px;
    }

  .underlined-description__description span {
      font-size: 30px;
      line-height: 34px;
    }
  }
</style>
{% schema %}
{
  "name": "Underlined text",
  "settings": [
  {
    "type": "checkbox",
    "id": "show_mobile",
    "label": "Show Mobile",
    "default": true
  },
  {
    "type": "checkbox",
    "id": "show_desktop",
    "label": "Show Desktop",
    "default": true
  },
    {
      "type": "html",
      "id": "main_description",
      "label": "Copy"
    }
  ],
  "presets": [
    {
      "name": "Underlined Text",
      "category": "Landing"
    }
  ]
}
{% endschema %}