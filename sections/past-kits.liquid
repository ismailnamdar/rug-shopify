<div class="past-kits-landing {% unless section.settings.show_mobile %} hidden-xs {% endunless %}{% unless section.settings.show_desktop %}hidden-sm hidden-md hidden-lg{% endunless %}">
  <div class="past-kits__header">
    <h4 class="h4">{{section.settings.title}}</h4>
  </div>
  {% assign kits = section.blocks | map: "settings" | map: "kit_name" | uniq | compact %}
  <div class="past-kits__selector">
    {% for kit in kits %}
      <div class="past-kit__selector {% if forloop.first %} selected {% endif %}" data-past-kit="{{kit | handle}}" >{{kit}}</div>
    {% endfor %}
  </div>
  
  {% for kit in kits %}
    <div class="past-kits__slider {% if forloop.first %} selected {% endif %}" data-past-kit="{{kit | handle}}"  style="background-color: transparent; background-image: linear-gradient(180deg, transparent 0%, transparent 30%, {{section.settings.background_color}} 30%, {{section.settings.background_color}} 100%);">
      {% for block in section.blocks %}
        {% if block.settings.kit_name != kit %}  {% continue %}  {% endif %}
        <div class="slider__element">
          {% if section.settings.show_slide_title %}
          <div class="past-kits__label">{{kit}}</div>
          {% endif %}
          {% render 'image', _image: block.settings.brand_image, alt: block.settings.brand_image.alt, classes: "aspect-ratio-box" %}
        </div>
      {% endfor %}
    </div>

  {% endfor %}

  {% for kit in kits %}
  <div class="past-kits__kit-description {% if forloop.first %} selected {% endif %}" data-past-kit="{{kit | handle}}" style="background-color: {{section.settings.background_color}}; color: {{section.settings.text_color}}">
    {% for block in section.blocks %}
      {% unless block.type == "kit_description" %}
        {% continue %}
      {% endunless %}
      {% if block.settings.title == kit %}
        <div class="past-kits__kit-description-text">
          {{block.settings.kit_description}}
        </div>
        {% if block.settings.bottom_buttom_url != blank and block.settings.bottom_buttom_label != blank %}
          <a href="{{block.settings.bottom_button_url}}" class="btn btn--transparent">{{block.settings.bottom_buttom_label}}</a>
        {% endif %}
        {% break %}
      {% endif %}
    {% endfor %}
  </div>
  {% endfor %}
</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    $("#shopify-section-{{section.id}} .past-kits__slider").slick({
      slidesToShow: 1,
      autoplay: true,
      centerMode: true,
      centerPadding: '0',
      dots: true
    })

    $("#shopify-section-{{section.id}} .past-kit__selector").on('click', function(event) {

      $("#shopify-section-{{section.id}} .past-kit__selector").removeClass("selected");

      $("#shopify-section-{{section.id}} .past-kits__slider").removeClass("selected");
      $("#shopify-section-{{section.id}} .past-kits__kit-description").removeClass("selected");
      $(event.currentTarget).addClass("selected")
      const selectedKit = $(event.currentTarget).attr("data-past-kit");
      $(`#shopify-section-{{section.id}} .past-kits__slider[data-past-kit="${selectedKit}"]`).addClass("selected")
      $(`#shopify-section-{{section.id}} .past-kits__kit-description[data-past-kit="${selectedKit}"]`).addClass("selected")
    })
  })
</script>
