
<div class="join-club page-width" id="join-club-section">
  <h1 class="h1">{{section.settings.title}}</h1>
  <p class="subtitle">{{section.settings.subtitle}}</p>
  <div class="join-club__clubs">
    {% for block in section.blocks %}
      <div class="join-club__club">
        <div class="join-club__header raddish-card">
          <div class="join-club__left" style="background-color: {{block.settings.color}}">
            {% render 'image', _image: block.settings.icon, alt: block.settings.icon.alt %}
            <h4>{{block.settings.title}}</h4>
            <span class="plus"></span>
          </div>
          <div class="join-club__right">
            <p>{{block.settings.short_description}}</p>
            <span class="plus"></span>
          </div>
        </div>
        <div class="join-club__content">
          {% render 'image', _image: block.settings.image, alt: block.settings.image.alt %}
          <div>
            {{block.settings.description}}
          </div>
          <div class="bottom-buttons">
            {% if block.settings.learn_more_button_link != blank %}
            <a href="{{block.settings.learn_more_button_link}}" target="_blank" class="join-button btn btn--o">{{block.settings.learn_more_button_label}}</a>
            {% endif %}
            <a href="{{block.settings.button_link}}" target="_blank" class="join-button btn">{{block.settings.button_label}}</a>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

