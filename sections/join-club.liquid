<style>
  .join-club .bottom-buttons {
    display: flex;
    margin-top: auto;
    gap: 16px;
  }
  .join-club .bottom-buttons a.btn--o:hover {
      background: #f3576b;
      color: white;
  }
  .join-club .bottom-buttons a {padding: 18px 0 !important;}

  .join-club .bottom-buttons a.btn--o {
      background: transparent;
      border: 2px solid #f3576b;
      color: #f3576b;
  }
  .join-club__content p {
      margin-top: 6px;
      margin-bottom: 6px;
      text-align: center;
      font-size: 18px;
      padding: 0 1px;
  }

  .join-club__content .join-button {
      width: 100%;
      margin-top: 8px;
      max-height: 54px;
      line-height: 18px;
  }

  .join-club__content a {
      font-weight: bold;
  }

  .join-club__content {
      font-size: 18px;
      transition: max-height .3s ease;
      margin: 16px;
  }

  .join-club__club {margin-bottom: 8px;}

  .join-club__left {
      transition: width .3s ease;
  }

  .join-club__club.open {
      margin-bottom: 24px;
  }

  .join-club__right p {
    margin: 0;
  }

  .join-club__right {
      padding-left: 8px;
      position: relative;
      display: flex;
      align-items: center;
      flex:1;
      width: auto;
  }

  .join-club__right .plus {
      margin-top: 0;
      margin-right: 1.5rem;
  }

  .join-club__content {
      max-height: 0;
      overflow: hidden;
  }

  .join-club__club.open .join-club__content {
      max-height: 500px;
  }

  .join-club__club.open {
      border: 0.875px solid rgba(77, 77, 77, 0.19971);
      box-shadow: 0px 2px 4px rgba(77, 77, 77, 0.201868);
      border-radius: 8px;
  }

  .join-club__club.open .join-club__header  {
      border: none;
      box-shadow: none;
      max-height: 50px;
  }

  .join-club__club.open .join-club__left {
      border-top-left-radius: 0;
      border-bottom-left-radius: 0;
      width: 100%;
      padding: 0;
      flex-direction: row;
  }

  .join-club__club.open .join-club__right {
      width: 0;
      padding: 0;
      overflow: hidden;
      flex-direction: row;
  }

  .join-club__club.open  .join-club__left h4 {
      margin-left: 10px;
  }

  .open.join-club__club .plus {
      background-image: url({{"blue-minus.png" | asset_url}});
      display: block;
  }

  .join-club__club .plus {
      margin-left: auto;
      width: 12px;
      flex: 0 0 15px;
      height: 20px;
      display: inline-block;
      background-position: center center;
      background-repeat: no-repeat;
      background-size: 100% auto;
      background-image: url({{"blue-plus.png" | asset_url}});
      margin-right: 10px;
      margin-top: 5px;
  }

  .join-club__left .plus {
      display: none;
  }
  .join-club__left .plus {
      position: absolute;
      right: 8px;
  }

  .join-club__left {
      position: relative;
  }
  .join-club h1 {
      font-size: 26px;
      text-align: center;
      line-height: 36px;
      margin-bottom: 8px;
  }

  .join-club {
      padding-top: 24px;
      padding-bottom: 10px;
  }

  .join-club .subtitle {
      font-family: 'KG HAPPY Solid';
      font-size: 18px;
      text-align: center;
      margin-top: 0;
  }

  .join-club__header {
      display: flex;
      flex-direction: row;
  }

  .join-club__left {
      min-width: 110px;
      width: 25%;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 8px;
      border-top-left-radius: 8px;
      border-bottom-left-radius: 8px;

  }

  .join-club__left h4 {
      margin-top: 2px;
      margin-bottom: 0;
      font-family: 'KG HAPPY Solid';
      font-size: 18px;
  }

  .join-club__left img {
      max-width: 32px;
  }
  @media screen and (min-width: 750px) {
    .join-club__club .join-club__content {
        max-height: 500px;
        height: calc(100% - 80px);
        display: flex;
        flex-direction: column;
    }

    .join-club__club {
        border: 0.875px solid rgba(77, 77, 77, 0.19971);
        box-shadow: 0px 2px 4px rgba(77, 77, 77, 0.201868);
        border-radius: 8px;
    }

    .join-club__club .join-club__header  {
        border: none;
        box-shadow: none;
        max-height: 50px;
    }

    .join-club__club .join-club__left {
        border-top-left-radius: 0;
        border-bottom-left-radius: 0;
        width: 100%;
        padding: 0;
        flex-direction: row;
    }

    .join-club__club .join-club__right {
        width: 0;
        padding: 0;
        overflow: hidden;
        flex-direction: row;
    }

    .join-club__club  .join-club__left h4 {
        margin-left: 10px;
    }

    .join-club__club .plus {
        background-image: url({{"blue-minus.png" | asset_url}});
        display: none;
    }
    .join-club__clubs {
        display: flex;
        /* align-items: center; */
        gap: 40px;
        justify-content: center;
        margin-top: 4rem;
    }

    .join-club__club {
        flex: 1;
    }

    .join-club__content .join-button {
      margin-top: auto;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    $("#shopify-section-{{section.id}} .join-club__club .join-club__header").on('click', function() {
      $(event.currentTarget).closest(".join-club__club").toggleClass("open")
    })
  })
</script>

