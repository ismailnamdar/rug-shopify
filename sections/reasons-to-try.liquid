
<div class="reasons-to-try">
  {% if section.settings.button_text != blank %}
    <a class="btn hidden-mobile" href="{{section.settings.button_url}}">{{section.settings.button_text}}</a>
  {% endif %}
  <div class="title-row">
    {% if section.settings.icon != blank %}
      {% render 'image', _image: section.settings.icon, alt: section.settings.icon.alt %}
    {% endif %}
    <h2 class="h2" {% if section.settings.header_color != blank %} style="color: {{section.settings.header_color}}" {% endif %}>{{section.settings.title}}</h2>
  </div>
  <div class="blocks-container">
  {% for block in section.blocks %}
    <div class="reason-block">
      <div class="reason-block__number">{{forloop.index}}</div>
      <div class="reason-block__description"> {{block.settings.text}}</div>
    </div>
  {% endfor %}
  </div>
  {% if section.settings.bottom_button_text != blank %}
    <a class="btn hidden-desktop" href="{{section.settings.bottom_button_url}}">{{section.settings.bottom_button_text}}</a>
  {% endif %}
</div>

<style>
  .reasons-to-try {
    max-width: 900px;
    margin: 0 auto;
    padding: 40px 20px;
}

.reasons-to-try .title-row {
    display: flex;
    align-items: center;
    justify-content: center;
}

.reasons-to-try .title-row img {
    max-width: 90px;
    margin-right: 10px
}

.reasons-to-try .title-row h2 {
    margin-bottom: 0;
}

.reasons-to-try .btn {
    width: 100%;
    max-width: 310px;
    margin: 0 auto 30px;
    padding-top: 16px !important;
    padding-bottom: 16px !important;
    display: block;
}

.reason-block__number {
    border: 0.875px solid rgba(77, 77, 77, 0.19971);
    box-shadow: 0px 2px 4px rgb(77 77 77 / 20%);
    width: 75px;
    height: 75px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 100px;
    box-shadow: 1.65px 1.65px 5.5px rgba(0, 0, 0, 0.2);
    font-family: 'KG HAPPY Solid';
    font-style: normal;
    font-weight: 400;
    color: #F3576B;
    font-size: 45px;
    margin-right: 14px;
    flex: 0 0 auto;
}

.reason-block {
    display: flex;
    align-items: center;
}

.reasons-to-try .blocks-container {
  display: grid;
  flex-direction: column;
  grid-template-columns: 1fr 1fr;
  grid-auto-flow: row;
  grid-gap: 36px;
  margin-top: 36px;
  grid-column-gap: 57px;
}

@media screen and (max-width: 749px) {
  .reasons-to-try {
    padding: 40px 20px 20px;
  }
  .reasons-to-try .title-row {
    flex-direction: column;
    text-align: center;
    /* font-size: 20px; */
  }

  .reasons-to-try .title-row h2 {
    font-size: 18px;
    margin-top: 1rem;
  }

  .reasons-to-try .blocks-container {
    display: flex;
    margin-bottom: 4rem;
    padding: 0 2.5rem;
    grid-gap: 18px;
    margin-top: 2rem;
  }

  .reason-block__number {
    width: 50px;
    height: 50px;
    font-size: 30px;
  }

  .reason-block__description {
    font-size: 16px;
  }

}
</style>

{% schema %}
  {
    "name": "Reasons to try",
    "settings": [
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Pick a Club"
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button URL"
      },
      {
        "type": "image_picker",
        "id": "icon",
        "label": "Icon"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "color",
        "id": "header_color",
        "label": "Header color"
      },
      {
        "type": "text",
        "id": "bottom_button_text",
        "label": "Button Text",
        "default": "Join Raddish!"
      },
      {
        "type": "url",
        "id": "bottom_button_url",
        "label": "Button URL"
      }
    ],
    "blocks": [
      {
        "type": "reason",
        "name": "Reason",
        "settings": [
          {
            "type": "textarea",
            "id": "text",
            "label": "Text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Reasons to Try",
        "category": "Homepage"
      }
    ]
  }
{% endschema %}