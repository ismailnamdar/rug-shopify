<div class="image-normal" style="background-image: url({{ section.settings.image | img_url: 'master' }});">
  {{ section.settings.image | img_url: 'master' | img_tag }}
</div>

<div class="image-retina" style="background-image: url({{ section.settings.image_2x | img_url: 'master' }});">
  {{ section.settings.image_2x | img_url: 'master' | img_tag }}
</div>

<div class="hero-content">
  <h2>{{ section.settings.heading }}</h2>
  <a class="btn homepage" id="heroJoin" href="{{ section.settings.url }}">{{ section.settings.cta }}</a>
</div>

<div class="page-width">
<div class="dividing-dots"></div>
</div>

{% schema %}
  {
    "name": "Hero",
    "class": "hero",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Hero Image",
        "info": "Recommended dimensions: 1920x850px"
      },
      {
        "type": "image_picker",
        "id": "image_2x",
        "label": "2x Hero Image (For retina displays)",
        "info": "Recommended dimensions: 3840x1700px"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "cta",
        "label": "Button Text"
      },
      {
        "type": "url",
        "id": "url",
        "label": "Button URL"
      }
    ],
    "presets": [
      {
        "name": "Hero",
        "category": "Old Home Sections"
      }
    ]
  }
{% endschema %}