{%- assign _blocks = section.blocks -%}
<div>

{%- for block in _blocks -%}
  {%- assign _block = block.settings -%}
  {% assign block_name = 'homeschooling-' | append: block.type %}

  {% if _block.show_section or block.type == 'separator' %}
    {% include block_name, _block: _block %}
  {% endif %}
{%- endfor -%}
</div>
<style>
  #shopify-section-{{section.id}} .section-content .section__content ul{ text-align: left; }

  #shopify-section-{{section.id}} .section-content .section__content ul {
    list-style: none; /* Remove default bullets */
  }

  #shopify-section-{{section.id}} .section-content .section__content ul li::before {
    content: "\2022";  /* Add content: \2022 is the CSS Code/unicode for a bullet */
    color: #01BCBE; /* Change the color */
    font-weight: bold; /* If you want it to be bold */
    display: inline-block; /* Needed to add space between the bullet and the text */
    width: 1em; /* Also needed for space (tweak if needed) */
    margin-left: -1em; /* Also needed for space (tweak if needed) */
  }

  #shopify-section-{{section.id}} .list-recipes img {
    max-height: none;
    border-radius: 4px;
  }

  #shopify-section-{{section.id}} .section-content .section__inner {
    padding-left: 20px;
    padding-right: 20px;
    max-width: 1020px;
    margin: 0 auto;
  }

  #shopify-section-{{section.id}} .section-content .section__image {
    max-width: none;
    flex: unset;
  }

  .section-banner .section__image {
    flex: 0 0 25%;
  }
  .section-banner .section__inner {
    align-items: center;
  }

  @media (min-width: 768px) {
    .section-banner .section__content h2  {
      white-space: nowrap;
    }
    #shopify-section-{{section.id}} .section-content:last-child .section__content {
      display: flex;
      align-items: flex-start;
      justify-content: flex-start;
      text-align: left;
      flex-direction: column;
    }

    #shopify-section-{{section.id}} .section-content:last-child {
      max-width: 720px;
      margin: 0 auto;
      padding: 10px 0;
    }
  }

  @media (max-width: 768px){
    #shopify-section-{{section.id}} .section-content:last-child .section__image img {
      display: block;
      margin: 0 auto;
    }

    #shopify-section-{{section.id}} .section-content:last-child {
      padding-top: 0;
    }

    #shopify-section-{{section.id}} .section-content .section__inner {
      padding-left: 8px;
      padding-right: 8px;
    }
  }
</style>

