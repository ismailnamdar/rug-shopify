<h2 class="section-title font-heading-avenir h2">{{section.settings.section_title}}</h2>

<style>
  .font-heading-avenir {
    color: #4D4D4D;
    font-family: Avenir Heavy;
  }

  .section-title {
    font-size: 40px;
    color: #4D4D4D;
    line-height: 45px;
  }
  #shopify-section-{{section.id}} .section-title {
    margin-top: {{section.settings.margin_top}}px;
    margin-bottom: {{section.settings.margin_bottom}}px
  }
  @media screen and (max-width: 875px) {
    #shopify-section-{{section.id}} .section-title {
      margin-top: {{section.settings.margin_top | times: 0.75}}px;
      margin-bottom: {{section.settings.margin_bottom | times: 0.75}}px
    }
    .section-title {
      font-size: 22px;
      color: #4D4D4D;
      line-height: 27px;
    }
  }
</style>
{% schema %}
  {
    "name": "Section Title",
    "class": "page-width",
    "settings": [
      {
        "type": "text",
        "id": "section_title",
        "label": "title"
      },
      {
        "type": "range",
        "id": "margin_top",
        "label": "Margin Top",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 0
      },
      {
        "type": "range",
        "id": "margin_bottom",
        "label": "Margin Bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 0
      }
    ],
    "presets": [
      {
        "name": "Section Title",
        "category": "Blog"
      }
    ]
  }
{% endschema %}