{% comment %}
  Section: Club Cards (Title + Subtitle + Cards + CTA)
  File: sections/club-cards.liquid
{% endcomment %}

<section id="club-cards-{{ section.id }}" class="club-cards">
  <div class="club-cards__wrap">
    {% if section.settings.title != blank %}
      <h2 class="club-cards__title">{{ section.settings.title }}</h2>
    {% endif %}
    {% if section.settings.subtitle != blank %}
      <p class="club-cards__subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}

    <div class="club-cards__grid">
      {%- comment -%} CARD {%- endcomment -%}
    {%- for block in section.blocks -%}
      {%- assign p = all_products[block.settings.product] -%}
      {%- assign accent = block.settings.card_color | default: '#2EC5C8' -%}

  <div class="club-card" style="--accent: {{ accent }};" {{ block.shopify_attributes }}>
    <div class="club-card__media">
      {%- if block.settings.image != blank -%}
        {{ block.settings.image | image_url: width: 1200 | image_tag: loading: 'lazy', class: 'club-card__img', alt: block.settings.custom_title | default: p.title, width: 343, height: 219 }}
      {%- elsif p.featured_image -%}
        {{ p.featured_image | image_url: width: 1200 | image_tag: loading: 'lazy', class: 'club-card__img', alt: block.settings.custom_title | default: p.title, width: 343, height: 219 }}
      {%- else -%}
        <div class="club-card__img club-card__img--placeholder">{{ 'image' | placeholder_svg_tag }}</div>
      {%- endif -%}

      {%- comment -%} cart icon placeholder (uses assets/cart-icon.png) {%- endcomment -%}
       {% if block.settings.cart_link != blank %}
       <a class="club-card__cart-button" aria-label="goes to cart of this product" href="{{ block.settings.cart_link | append: block.settings.cart_link_section_id }}">
        <img src="{{ 'cart-button.png' | asset_url }}" width="45" height="42" alt="cart icon" />
       </a>
       {% endif %}
    </div>

    <a  class="club-card__panel" aria-label="Card content" href="{{ block.settings.card_link | default: '#' }}">
      <h3 class="club-card__title">
        {{ block.settings.custom_title | default: p.title | default: 'Club' }}
      </h3>

      <p class="club-card__meta">
        {%- if block.settings.ages != blank -%}
          <span>{{ block.settings.ages }}</span>
        {%- endif -%}
        {%- if p and p.price -%}
          <span aria-hidden="true"> | </span>
          <span>Starting at {{ p.price | money }}/mo</span>
        {%- endif -%}
      </p>

      <div class="club-card__cta" aria-label="learn more button">
        {{ block.settings.learn_label | default: 'Learn More' }}
      </div>
    </a>
  </div>
{%- endfor -%}
    </div>

    {% if section.settings.btn_text != blank and section.settings.btn_link != blank %}
      <div class="club-cards__cta">
        <a class="btn club-cards__btn" href="{{ section.settings.btn_link }}">{{ section.settings.btn_text }}</a>
      </div>
    {% endif %}
  </div>


  {%- comment -%} CARD STYLES {%- endcomment -%}
<style>
  /* wrapper grid unchanged; only card styles below */
  .club-cards {
    padding: 55px 12px;
  }

  #club-cards-{{ section.id }} .club-card{
    background: #fff;
    border: 3px solid var(--accent, #2EC5C8);
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 18px rgba(0,0,0,.06);
    display: grid;
    grid-template-rows: auto 1fr;
    filter: drop-shadow(0 2px 4px rgba(77, 77, 77, 0.20));
  }

  #club-cards-{{ section.id }} .club-cards__title {
    margin-bottom: 0;
    margin-top: 0;
    text-align: center;
    color:  #4D4D4D;
    font-family: "KG HAPPY Solid", sans serif;
    font-size: 32px;
    font-weight: 400;
    line-height: 26px;
  }

  #club-cards-{{ section.id }} .club-cards__subtitle {
    color: #01BCBE;
    text-align: center;
    font-family: "KG HAPPY Solid", sans serif;
    font-size: 32px;
    font-weight: 400;
    line-height: 26px;
  }

  #club-cards-{{ section.id }} .club-cards__wrap {
    display: flex;
    flex-direction: column;
    justify-content: center;    
    align-items: center;
    gap: 40px;
  }

  #club-cards-{{ section.id }} .club-cards__btn {
    min-width: 301px;
    max-width: 100%;
    letter-spacing: 0;
   }

  /* media (image) */
  #club-cards-{{ section.id }} .club-card__media{
    position: relative;
    display: block;
    line-height: 0;
    background: #f6f7f9;
    overflow: hidden;
  }
  #club-cards-{{ section.id }} .club-card__img {
    width: 343px;
    height: auto;
    display: block;
    aspect-ratio: 16/10;
    object-fit: cover;
    transform: scaleX(1.05);
    border-radius: 8px;
  }
  #club-cards-{{ section.id }} .club-card__img--placeholder{
    aspect-ratio: 16/10;
    display:flex;align-items:center;justify-content:center;
  }
  /* cart icon badge on image */
  #club-cards-{{ section.id }} .club-card__cart{
    position: absolute;
    right: 10px;
    bottom: 10px;
    width: 36px;
    height: 36px;
    display: grid;
    place-items: center;
    border-radius: 10px;
    background: rgba(0,0,0,.65);
    box-shadow: 0 6px 16px rgba(0,0,0,.18);
  }
  #club-cards-{{ section.id }} .club-card__cart img{ display:block; }

  /* white content area (semantically a figcaption) */
  #club-cards-{{ section.id }} .club-card__panel{
    padding: 29px 16px 34px;
    text-align: center;
    background: #fff;          /* explicit white panel */
    border-top: 1px solid rgba(0,0,0,.06);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 20px;
  }
  #club-cards-{{ section.id }} .club-card__title {
    font-size: 24px;
    line-height: 22px;
    font-weight: 400;
    color: #4D4D4D;
    font-family: "KG HAPPY Solid", sans serif;
    margin: 0;
  }
  #club-cards-{{ section.id }} .club-card__meta {
    color:  #4D4D4D;
    font-family: Avenir;
    font-size: 16px;
    font-style: normal;
    font-weight: 500;
    line-height: 22px;
    margin: 0;
  }
  #club-cards-{{ section.id }} .club-card__cta{
    display: inline-block;
    text-decoration: none;
    color: #F3576B;
    font-family: Avenir;
    font-size: 16px;
    font-style: normal;
    font-weight: 800;
    line-height: 18px;
  }

  #club-cards-{{ section.id }} .club-card__cart-button {
    position: absolute;
    bottom: 10px;
    right: 10px;
    border: none;
    padding: 0;
    background: transparent;
    display: flex;
  }

  #club-cards-{{ section.id }} .club-card__cta:focus{ outline: 2px solid var(--accent); outline-offset: 2px; }
      #club-cards-{{ section.id }} .club-cards__grid{
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: center;
      align-items: center;
      gap: 22px;
    }
    @media (max-width: 740px){
        .club-cards {
          padding: 12px;
      }

      #club-cards-{{ section.id }} .club-cards__grid{
        flex-direction: column;
        gap: 18px;
      }

      #club-cards-{{ section.id }} .club-card__panel{
        padding: 15px 16px 23px;
        gap: 10px;
      }

      #club-cards-{{ section.id }} .club-cards__wrap {
        gap: 18px;
      }

        #club-cards-{{ section.id }} .club-cards__subtitle {
            display: none;
        }

          #club-cards-{{ section.id }} .club-cards__title {
            font-size: 18px;
            line-height: 36px;
        }

        #club-cards-{{ section.id }} .club-card__title{
            font-size: 18px;
        }

        #club-cards-{{ section.id }} .club-cards__cta{
            font-size: 16px;
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            padding: 0.5rem 1.5rem;
            background-color: white;
            width: 100%;
            z-index: 200000;
        }

        #club-cards-{{ section.id }} .club-card__meta{
            font-size: 16px;
        }

        #club-cards-{{ section.id }} .club-cards__btn {
          width: 100%;
        }
    }

</style>


</section>

{% schema %}
{
  "name": "Three Cards",
  "settings": [
    { "type": "text", "id": "title", "label": "Title", "default": "Monthly Culinary Adventures That Inspire & Engage" },
    { "type": "text", "id": "subtitle", "label": "Subtitle", "default": "Give the Gift of Raddish" },
    { "type": "text", "id": "btn_text", "label": "Button text", "default": "Gift Raddish" },
    { "type": "url",  "id": "btn_link", "label": "Button link" }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "settings": [
        { "type": "product", "id": "product", "label": "Product" },
        { "type": "text", "id": "custom_title", "label": "Card title (optional)" },
        { "type": "text", "id": "ages", "label": "Card description text" },
        { "type": "image_picker", "id": "image", "label": "Image (optional)", "info": "Defaults to product image." },
        { "type": "color", "id": "card_color", "label": "Accent/border color", "default": "#E7E7E9" },
        { "type": "url", "id": "cart_link", "label": "Cart link (optional)" },
        { "type": "text", "id": "cart_link_section_id", "label": "Cart link section id", "info": "Target id of the section to scroll on click to cart button. Example: #subscription-builder-widget"},
        { "type": "url", "id": "card_link", "label": "Card link (Learn more)" },
        { "type": "text", "id": "learn_label", "label": "Learn button label", "default": "Learn More" }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Three Cards",
      "category": "Custom sections",
      "blocks": [
        { "type": "card" },
        { "type": "card" },
        { "type": "card" }
      ]
    }
  ]
}
{% endschema %}
