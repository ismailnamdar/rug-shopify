{% assign is_full_width = true %}

{% if section.settings.content_left != blank and section.settings.content_right != blank %}
	{% assign is_full_width = false %}
{% endif %}


<div class="page-width shopify-section-splash">
  {% render "login-form" %}
</div>


<style>
  .login-right strong,
  .login-left strong {
  	font-weight: 600;
  }
  .shopify-section-splash .login-options .login-left:after {
	content: none;
  }
  
  .main-content__account .account-content-container { padding-top: 10px; }
  
  .shopify-section-splash div.login-options { padding: 0; margin: 20px auto 0; }
  
  .login-left { border-right: 1px solid #01bcbe; }
  
  .login-full-width { padding: 0 3rem; text-align: center; }
  
  .shopify-section-splash div.login-intro { margin-top: 10px; }
  
  .spacer { display: none !important; }
  
  #shopify-section-page-splash { margin-bottom: 36px; }
  
  @media only screen and (max-width: 670px) {
    .shopify-section-splash .login-options .login-left:after {
      content: "";
    }
    .login-left { border-right: none; }
  }
  .login-right, .login-left { margin: 15px 0; }
  
  .login-intro { padding: 2rem 0 4rem; }
  
  .shopify-section-splash .login-options:before { display: none; }
  
  .shopify-section-splash .login-options { 
      max-width: 620px;
      margin: 20px auto 40px;
  }
</style>

{% schema %}
{
  "name": "Login Page",
  "class": "shopify-section-login",
  "settings": [
	{
      "type": "richtext",
      "id": "content_left",
      "label": "Content Left",
	   "info": "Leave blank and Content Right would become full width"
	},
	{
      "type": "richtext",
      "id": "content_right",
      "label": "Content Right",
 	   "info": "Leave blank and Content Left would become full width"
	},
	{
          "type": "select",
          "id": "customer_service_link",
          "label": "Customer service link:",
          "options": [
            {
              "value": "opens",
              "label": "Opens Chat Popup"
            },
            {
              "value": "links",
              "label": "Links to: hello@raddishkids.com"
            }
          ],
          "default": "opens"
	}
  ]
}
{% endschema %}
