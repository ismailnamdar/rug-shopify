<div class="dropdown">
  <div id="mc_embed_signup">
    <form action="#" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate subscribe-form" target="_blank" novalidate>
      <div id="mce-responses" class="clear">
        <div class="response" id="mce-error-response" style="display:none"></div>
        <div class="response" id="mce-success-response" style="display:none"></div>
      </div>
      <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_886ef8368e6ec2cdbcdeccbd4_525cd3d2b1" tabindex="-1" value=""></div>
      <div class="flex space form">
        <input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL" placeholder="Email address">
        <input type="submit" value="{{ section.settings.newsletter-cta }}" name="subscribe" id="mc-embedded-subscribe" class="btn">
      </div>
    </form>
  </div>
</div><!-- /.dropdown -->

{% schema %}
  {
    "name": "Blog: Newsletter Signup",
    "class": "blog-sidebar-item newsletter",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Section Heading",
        "default": "Newsletter"
      },
      {
        "type": "textarea",
        "id": "paragraph",
        "label": "Newsletter Description",
        "default": "Get a free illustrated recipe guide"
      },
      {
        "type": "text",
        "id": "newsletter-cta",
        "label": "Button Text",
        "default": "Sign Up"
      }
    ]
  }
{% endschema %}
