
<div class="homepage-banner homepage-banner--50-50 {% unless section.settings.show_mobile %} hidden-xs {% endunless %}{% unless section.settings.show_desktop %}hidden-sm hidden-md hidden-lg{% endunless %}">
  <div class="content-left" style="background-color: {{section.settings.background_color}};">
    {% if section.settings.icon != blank and false%}
      <div class="hompage-banner--column-left" >
        {% render 'image', _image: section.settings.icon, alt: section.settings.icon.alt %}
      </div>
    {% endif %}
    <div class="hompage-banner--column-right">
      <h1 class="h1">
        <span class="homepage-banner--image-container">
          {% render 'image', _image: section.settings.icon, alt: section.settings.icon.alt %}
        </span>
        {{section.settings.title}}
      </h1>
      <h3 class="h3">{{section.settings.subtitle}}</h3>
      <p>{{section.settings.content}}</p>
      {% if section.settings.text != blank %}
      <a class="btn homepage-banner--50-50__button" href="{{section.settings.url}}">{{section.settings.text}}</a>
      {% endif %}
    </div>
  </div>
  <div class="content-right">
    {% render 'image', _image: section.settings.image, alt: section.settings.image.alt %}
  </div>
  <div style=" overflow: hidden;" class="wave" >
    <svg class="homepage-banner--50-50__wave-mobile" viewBox="70 0 200 150" preserveAspectRatio="none" style="height: 100%; width: 100%;"><path d="M0,50 C41.7,100 41.7,0 83.3,50 S125,100 166.7,50 S208.3,0 250,50 S291.7,100 333.3,50 S375,0 416.7,50 S458.3,100 500,50 L500,150 L0,150 Z" style="stroke: none; fill: white;"></path></svg>
    <svg class="homepage-banner--50-50__wave" viewBox="0 0 500 150" preserveAspectRatio="none" style="height: 100%; width: 100%;"><path d="M0,50 C41.7,100 41.7,0 83.3,50 S125,100 166.7,50 S208.3,0 250,50 S291.7,100 333.3,50 S375,0 416.7,50 S458.3,100 500,50 L500,150 L0,150 Z" style="stroke: none; fill: white;"></path></svg>
  </div>
</div>

<style>
  .homepage-banner--50-50 {
    display: flex;
    min-height: 450px;
  }

  .homepage-banner--50-50 > div {
      width: 50%; 
  }

  .homepage-banner--50-50 .content-left {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
  }
  .hompage-banner--column-right h1 {
    font-style: normal;
    font-weight: 400;
    font-size: 32px;
    line-height: 32px;
    text-align: left;
    margin-bottom: 30px;
    color: #4D4D4D;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
}

.hompage-banner--column-right h3 {
    font-weight: 400;
    font-size: 22px;
    line-height: 32px;
    text-align: center;
    color: #4D4D4D;
    margin-bottom: 15px;
}

p {}

.homepage-banner--image-container {
  position: relative;
  width: 41px;
  height: 37px;
}

.content-right img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.hompage-banner--column-right p {
    margin-top: 0;
    margin-bottom: 30px;
    color: #4D4D4D;
    text-align: center;
    font-family: Avenir;
    font-size: 20px;
    font-style: normal;
    font-weight: 500;
    line-height: 36px;
}

.hompage-banner--column-right {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    position: relative;
}

.hompage-banner--column-right .btn {
    min-width: 312px;
    padding: 16px 25px !important;
    display: inline-block;
    font-size: 16px;
    letter-spacing: 0;
    text-transform: none;
}

.homepage-banner--50-50 .content-left {
    padding: 36px 78px 150px 85px;
    align-items: center;
    /* transform: translateY(50%); */
    /* top: 20%; */
    /* position: relative; */
}

.hompage-banner--column-right picture {
        
}

.hompage-banner--column-left img {
    /* width: 104px; */
}

.hompage-banner--column-left {
    width: 104px;
    flex: none;
}

.homepage-banner--50-50 {
    position: relative;
}

.homepage-banner--50-50__wave-mobile {
  display: none;
}

.homepage-banner--50-50__wave-desktop {
  display: block;
}
.homepage-banner--50-50__button {
  display: block;
}

  @media screen and (max-width: 1024px) {
    .homepage-banner--50-50 {
      display: flex;
      /* min-height: 450px; */
      flex-direction: column;
    }

    .homepage-banner--50-50 > div {
        width: 100%;
    }

    .hompage-banner--column-right h1 {
      font-size: 30px;
      margin-bottom: 20px;
    }

    .hompage-banner--column-right h3 {
      font-weight: 400;
      font-size: 16px;
      line-height: 21px;
      font-family: "Avenir", sans-serif;
      margin-bottom: 0;
    }

    .hompage-banner--column-right p {
      display: none;
    }

    .homepage-banner--50-50__wave-mobile {
      display: block;
    }

    .homepage-banner--50-50__wave-desktop {
      display: none;
    }

    .homepage-banner--50-50__button {
      display: none !important;
    }

    .homepage-banner--50-50 .content-left {
      padding: 25px 26px;
    }
  }
</style>

