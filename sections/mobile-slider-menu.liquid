{%- assign _section = section.settings -%}

{%- if _section.menu != blank -%}
  {%- assign menu = linklists[_section.menu] -%}

  <section class="section-mobile-menu">
    <ul>
      {%- for _link in menu.links -%}
        <li {% if _link.current %}class="is-current"{% endif %}>
          <a href="{{ _link.url }}">{{ _link.title }}</a>
        </li>
      {%- endfor -%}
    </ul>
  </section><!-- /.section-mobile-menu -->
{%- endif -%}

{% schema %}
{
  "name": "Mobile slider menu",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu"
    }
  ],
  "presets": [
    {
      "name": "Mobile slider menu",
      "category": "Mobile menus"
    }
  ]
}
{% endschema %}
