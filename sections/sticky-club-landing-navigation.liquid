<div class="club-landing-navigation {% unless section.settings.show_mobile %} hidden-xs {% endunless %}{% unless section.settings.show_desktop %} hidden-sm hidden-md hidden-lg{% endunless %}"">
  <div class="club-landing-navigation__header" style="background-color: {{section.settings.background_color}};">
    {% render 'image': _image: section.settings.club_image %}
    <h4 class="h4">{{section.settings.title}}</h4>
  </div>
  <div class="club-landing-navigation__nav-container" style="">
    {% for block in section.blocks %}
      <a class="{% if forloop.first %}active{% endif %}" data-href="{{block.settings.nav_link}}">{{block.settings.title}}</a>
    {% endfor %}
  </div>
</div>

<script>
  
  document.addEventListener("DOMContentLoaded", function() {
    $(".club-landing-navigation__nav-container a").on('click', function(event) {
      event.preventDefault();
      event.stopPropagation();
      const id = $(event.target).attr("data-href");
      console.log({id})
      $('body,html').animate({
          scrollTop: $(id).offset().top - 150
      }, 100);
    })
    const $nav = $("#shopify-section-{{section.id}} .club-landing-navigation__nav-container")
    $nav.slick({
      slidesToShow: 4,
      slidesToScroll: 4,
      autoplay: false,
      dots: false,
      infinite: false,
      arrows: false,
      variableWidth: true,
      centerMode: false
    })
    $.fn.isInViewport = function() {
      var elementTop = $(this).offset().top - 100;
      var elementBottom = elementTop + $(this).outerHeight() - 100;

      var viewportTop = $(window).scrollTop();
      var viewportBottom = viewportTop + $(window).height();

      return elementBottom > viewportTop && elementTop < viewportBottom;
    };
    var navElements = []
    $(".club-landing-navigation__nav-container a").each((index, el) => navElements.push($(el).attr("data-href")))
    var currentlyActive = $(".club-landing-navigation__nav-container a.active").attr("data-href");
