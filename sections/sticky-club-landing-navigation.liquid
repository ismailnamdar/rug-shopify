<style>
  .club-landing-navigation__nav-container {
    padding: 0 8px;
    border: 0.875px solid rgba(77, 77, 77, 0.19971);
    box-shadow: 0px 2px 4px rgba(77, 77, 77, 0.201868);
    background: white;
  }
  .club-landing-navigation__nav-container a.active:after {
      content: "";
      width: calc(100% - 16px);
      height: 2px;
      display: block;
      position: absolute;
      bottom: 0;
      background: #F3576B;
      bottom: 0;
  }

  .club-landing-navigation__nav-container a {
      position: relative;
  }
  .club-landing-navigation__nav-container a {
      font-family: 'KG HAPPY Solid';
      font-style: normal;
      font-weight: 400;
      font-size: 11px;
      line-height: 18px;
      color: #4D4D4D;
      padding: 9px 8px;
  }
  .club-landing-navigation__header {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .club-landing-navigation__header h4 {
    font-weight: 400;
    font-size: 20px;
    line-height: 22px;
    text-align: center;
    margin-bottom: 0;
    color: #4D4D4D;
  }

  .club-landing-navigation__header picture {
    max-width: 60px;
    max-height: 60px;
    margin-right: 1rem;
  }

  .club-landing-navigation__header {
    padding: 8px;
  }

  .sticky-club-navigation {
    /* position: sticky; */
    top: 0;
    z-index: 200001;
  }
  .club-landing-navigation__nav-container {
    display: none !important;
  }
</style>
