{% schema %}
  {
    "name": "Testimonials",
    "class": "testimonials",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Sub-Heading"
      },
      {
        "type": "text",
        "id": "secondary-heading",
        "label": "Secondary Heading"
      },
      {
        "type": "textarea",
        "id": "secondary-paragraph",
        "label": "Secondary Paragraph"
      },
      {
        "type": "text",
        "id": "cta",
        "label": "Button Text"
      },
      {
        "type": "url",
        "id": "url",
        "label": "Button URL"
      },
      {
        "type": "richtext",
        "id": "link-cta",
        "label": "FAQ Link"
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image Testimonial",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "Recommended dimensions: 250x250px"
          }
        ]
      },
      {
        "type": "text",
        "name": "Text Testimonial",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Heading"
          },
          {
            "type": "textarea",
            "id": "content",
            "label": "Content"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Testimonials",
        "category": "Old Home Sections"
      }
    ]
  }
{% endschema %}
