<div class="page-width">
  <h2 class="heading text-center">{{ section.settings.heading }}</h2>
  <h3 class="subheading text-center">{{ section.settings.subheading }}</h3>
  <div class="flex wrap testimonials-slider">
    {% for block in section.blocks %}
      <div class="testimonial{% if block.type == 'text' %} text{% else %} image{% endif %} index-{{ forloop.index }} flex flex-center wrap align-center">
        {% if block.type == 'image' %}
          <div>{{ block.settings.image | img_url: '250x' | img_tag }}</div>
        {% else %}
          <div class="flex wrap column align-center">
            <h5>{{ block.settings.title }}</h5>
            <p>{{ block.settings.content }}</p>
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
  <h2 class="heading text-center">{{ section.settings.secondary-heading }}</h2>
  <p class="sub-content text-center">{{ section.settings.secondary-paragraph }}</p>
  <div class="cta text-center">
    <a class="btn homepage" id="testimonialsJoin" href="{{ section.settings.url }}">{{ section.settings.cta }}</a>
    <div class="hiw-footer-link">{{ section.settings.link-cta }}</div>

