<div class="inside-the-kit-landing">
  {% render "wave", class: "wave wave--top" %}
  <h2 class="h2">{{section.settings.section_title}}</h2>
  {% comment %}
  <div class="inside-the-kit__slider" style="background-color: transparent;
  background-image: linear-gradient(180deg, transparent 0%, transparent 30%, {{section.settings.background_color}} 30%, {{section.settings.background_color}} 100%);">
    {% for block in section.blocks %}
      <div class="slider__element">
        {% render 'image', _image: block.settings.brand_image, alt: block.settings.brand_image.alt, classes: "aspect-ratio-box" %}
      </div>
    {% endfor %}
  </div>
  {% endcomment %}
  <div class="inside-the-kit__left" style="background-color: {{section.settings.background_color}}; color: {{section.settings.text_color}}">
    <div class="inside-the-kit__icon">
      {% render 'image': _image: section.settings.icon %}
    </div>
    <div class="inside-the-kit__title">
      <h3 class="h3">{{section.settings.left_title}}</h3>
    </div>
    <div class="inside-the-kit__button">
      <a class="btn" href="{{section.settings.button_url}}">{{section.settings.button_label}}</a>
    </div>
  </div>
  <div class="inside-the-kit__kit-description" style="background-color: {{section.settings.background_color}}; color: {{section.settings.text_color}}">
    {{section.settings.inside_the_kit_description}}
    {% if section.settings.bottom_buttom_url != blank and section.settings.bottom_buttom_label != blank %}
      <a href="{{section.settings.bottom_button_url}}" class="btn btn--transparent">{{section.settings.bottom_buttom_label}}</a>
    {% endif %}
  </div>
  {% render "wave", class: "wave wave--bottom" %}
</div>


<script>
  document.addEventListener("DOMContentLoaded", function() {
    $("#shopify-section-{{section.id}} .inside-the-kit__slider").slick({
      slidesToShow: 1,
      autoplay: false,
      centerMode: true,
      centerPadding: '0',
      dots: false,
      arrows: true,
      responsive: [
        {
          breakpoint: 768,
          settings: {
            autoplay: true
          }
        }
      ]
    })
  })
</script>
<style>
  .inside-the-kit__kit-description h3 {
    font-family: Avenir;
    font-size: 18px;
    font-weight: bold;
  }
  .inside-the-kit__kit-description a {
    width: 100%;
    margin-bottom: 2rem;
    margin-top: 1rem;
    max-width: 350px;
    margin: 0 auto;
    padding: 14px 20px !important;
  }

  .inside-the-kit__kit-description a.btn--transparent {
    background: transparent;
    border: 2px solid;
  }

  .inside-the-kit__slider ul.slick-dots {
    bottom: -3.5rem;
    display: flex;
  }

  .inside-the-kit__slider ul.slick-dots li button {
    width: 1.6rem;
    height: 1.6rem;
  }

  .inside-the-kit__slider ul.slick-dots li button {
    margin: 0 8px;
    background: #ffffff29;
    border: 2px solid white;
  }

  .inside-the-kit__slider ul.slick-dots li.slick-active button {
    background-color: white;
  }

  .inside-the-kit__kit-description {
    padding: 0 35px;
    font-weight: 900;
    padding-bottom: 3rem;
    font-size: 18px;
    padding-top: 1.5rem;
  }

  .inside-the-kit__kit-description ul {
    padding-left: 1.5rem;
    margin-top: 0;
  }

  .inside-the-kit__kit-description li {
    margin-top: 8px;
  }

  .inside-the-kit-landing .slider__element {
    padding: 0 2.5rem
  }

  .inside-the-kit-landing .slider__element img {
    border-radius: 8px;
    box-shadow: 0px 2px 4px rgba(77, 77, 77, 0.201868);
  }

  .inside-the-kit__header {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .inside-the-kit__header h4 {
    font-weight: 400;
    font-size: 20px;
    line-height: 22px;
    text-align: center;
    margin-bottom: 0;
    color: #4D4D4D;
  }

  .inside-the-kit__header picture {
    max-width: 60px;
    max-height: 60px;
    margin-right: 1rem;
  }

  .inside-the-kit__header {
    padding: 8px;
  }

  .inside-the-kit__description {
    font-size: 24px;
    font-family: 'Avenir';
    text-align: center;
    margin: 24px 40px;
    font-weight: 400;
  }

  .inside-the-kit__description span {
    font-family: 'KG HAPPY Solid';
    font-size: 20px;
    line-height: 24px;
  }

  .inside-the-kit-landing h2 {
    padding: 0 1.6rem;
    text-align: center;
    font-size: 26px;
    margin-bottom: 3.5rem;
  }

  .inside-the-kit-landing hr {
    border: none !important;
    border-top: 6px dashed #A9DD61 !important;
    border-top-width: 5px;
    border-right-width: 0px;
    border-bottom-width: 0px;
    border-left-width: 0px;
    margin-top: 2.5rem;
    width: 80%;
    margin-bottom: 3rem;
  }
  .inside-the-kit__slider .slick-arrow {
    width: 40px;
    height: 40px;
    background-color: rgb(255 255 255 / 80%);
  }

  .inside-the-kit__slider .slick-prev {
    left: 1.3rem;
  }

  .inside-the-kit__slider .slick-next {
    right: 1.3rem;
  }
  .inside-the-kit-landing .aspect-ratio-box img {
    position: relative;
  }
  .inside-the-kit-landing .aspect-ratio-box:after {
    content: none;
  }
  .inside-the-kit__icon {
    max-width: 100px;
    margin: 0 auto;
  }
  .inside-the-kit__left, 
  .inside-the-kit__kit-description {
    padding: 120px 40px;
  
  }
  .inside-the-kit__left {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .inside-the-kit__title h3 {
    color: inherit;
    text-align: center;
  }
/* Desktop */
@media (min-width: 768px) {
  .inside-the-kit-landing .slick-list {
      height: 100% !important;
  }

  .inside-the-kit-landing .slick-track {}

  .inside-the-kit-landing .slick-track {
      height: 100% !important;
  }

  .inside-the-kit-landing .slider__element {
      height: 100% !important;
  }
  .inside-the-kit__kit-description a {
    max-width: 220px;
    margin-top: 8px;
  }
  .inside-the-kit-landing .slider__element picture.aspect-ratio-box {
      height: 100% !important;
      display: block;
  }
  .inside-the-kit-landing .aspect-ratio-box img {
    position: absolute;
  }
  .inside-the-kit-landing .aspect-ratio-box:after {
    content: "";
  }
  .inside-the-kit-landing .slider__element picture.aspect-ratio-box img {
      height: 100% !important;
  }

  .inside-the-kit__kit-description h3 {
    font-style: normal;
    font-weight: 400;
    font-size: 24px;
    line-height: 38px;
    font-family: 'KG HAPPY Solid';
    margin-bottom: 16px;
  }

  .inside-the-kit__kit-description ul {
      padding-left: 3rem;
  }

  .inside-the-kit__kit-description ul li {
      margin-bottom: 10px;
  }
  #shopify-section-{{section.id}} .inside-the-kit__slider .slick-dots,
  #shopify-section-{{section.id}} .inside-the-kit__slider button {
    display: none !important;
  }
  .how-it-works-landing-desktop__card a.btn.btn--transparent {
      height: auto;
      align-self: flex-start;
      padding: 16px 25px !important;
      letter-spacing: 0;
      font-weight: bold;
      font-size: 16px;
  }
  
  .how-it-works-landing-desktop__card .how-it-works__description {
      padding-right: 55px;
      width: 100%;
  }
  
  .how-it-works__block {}
  
  .inside-the-kit-landing {
      display: flex;
      flex-direction: row;
      position: relative;
  }
  
  .inside-the-kit-landing > h2 {
      display: none;
  }
  .inside-the-kit__slider img {
    object-fit: cover;
  }
  .inside-the-kit__slider .aspect-ratio-box:after {
    padding-bottom: 60%;
  }
  .inside-the-kit__slider.slick-initialized.slick-slider.slick-dotted {}
  
  .inside-the-kit__slider {
      width: 60%;
      background: #01bcbe;
  }

  .inside-the-kit__left {
    width: 50%;
  }
  
  .inside-the-kit__kit-description {
      width: 50%;
  }
  
  .inside-the-kit-landing .slider__element {
      padding: 0;
  }
  
  .inside-the-kit-landing .slider__element img {
      border-radius: 0;
  }
}

@media (max-width: 768px) {
  .inside-the-kit-landing .wave {
    display: none;
  }
  .inside-the-kit__left, 
  .inside-the-kit__kit-description {
    padding: 30px 20px;
  
  }
}

</style>

