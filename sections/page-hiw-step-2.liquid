{% include 'image', _image: section.settings.image, size: '400', classes: 'step-image', alt: section.settings.heading %}
<h2 class="heading flex flex-center align-center"><span>2</span> {{ section.settings.heading }}</h2>
<h3 class="subheading text-center">{{ section.settings.subheading }}</h3>
<ul class="bullet-points">
  {% for block in section.blocks %}
    <li>{{ block.settings.title }}</li>
  {% endfor %}
</ul>

{% schema %}
  {
    "name": "How It Works: Step 2",
    "class": "how-it-works-page steps step-2 rte",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Sub-Heading"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ],
    "blocks": [
      {
        "type": "block",
        "name": "Bullet Point",
        "settings": [
          {
            "type": "richtext",
            "id": "title",
            "label": "Bullet Point"
          }
        ]
      }
    ]
  }
{% endschema %}
