<section class="rk-reviews">
  <div class="rk-reviews__inner">
    <div class="rk-reviews__grid" aria-hidden="false">
      <div class="rk-reviews__col rk-reviews__col--image">
        {%- if section.settings.left_image != blank -%}
          {{ section.settings.left_image
           | image_url: width: 1600
           | image_tag: loading: 'lazy', class: 'rk-reviews__img', alt: section.settings.left_image.alt | escape }}
        {%- endif -%}
      </div>
      <div class="rk-reviews__col rk-reviews__col--panel">
        <div class="rk-reviews__panel">
          {%- if section.settings.title != blank -%}
            <h2 class="rk-reviews__title">{{ section.settings.title }}</h2>
          {%- endif -%}
          {%- if section.settings.description != blank -%}
            <div class="rk-reviews__desc rte">{{ section.settings.description }}</div>
          {%- endif -%}
        </div>
      </div>
      <div class="rk-reviews__col rk-reviews__col--image">
        {%- if section.settings.right_image != blank -%}
          {{ section.settings.right_image
           | image_url: width: 1600
           | image_tag: loading: 'lazy', class: 'rk-reviews__img', alt: section.settings.right_image.alt | escape }}
        {%- endif -%}
      </div>
    </div>
    <div class="rk-reviews__mobile">
      <div class="rk-reviews__mobile-media">
        {%- assign mob_img = section.settings.mobile_image | default: section.settings.left_image -%}
        {%- if mob_img != blank -%}
          {{ mob_img
           | image_url: width: 1600
           | image_tag: loading: 'lazy', class: 'rk-reviews__img--mobile', alt: mob_img.alt | escape }}
        {%- endif -%}
      </div>
      <div class="rk-reviews__panel rk-reviews__panel--mobile">
        {%- if section.settings.title != blank -%}
          <h2 class="rk-reviews__title">{{ section.settings.title }}</h2>
        {%- endif -%}
        {%- if section.settings.description != blank -%}
          <div class="rk-reviews__desc rte">{{ section.settings.description }}</div>
        {%- endif -%}
      </div>
    </div>
  </div>
  <style>
    .rk-reviews {
      --panel-bg: {{ section.settings.bg_color | default: '#EAF6FB' }};
    }
    .rk-reviews__inner {
      width: 100%;
    }
    .rk-reviews__grid {
      display: flex;
      background: var(--panel-bg);
      justify-content: space-between;
      gap: 0;
    }
    .rk-reviews__col--image {
      min-height: 260px;
    }
    .rk-reviews__img {
      width: 100%;
      max-width: 425px;
      height: 100%;
      display: block;
      object-fit: cover;
    }
    .rk-reviews__panel {
      height: 100%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      padding: clamp(20px, 4vw, 56px);
    }
    .rk-reviews__title {
      margin: 0 0 6px;
      line-height: 1.2;
      font-family: "KG HAPPY Solid", sans-serif;
      font-weight: 400;
      font-size: 40px;
      line-height: 64px;
      letter-spacing: 0;
      text-align: center;
    }
    .rk-reviews__desc {
      max-width: 378px;
      margin: 0;
      font-family: "Avenir", sans-serif;
      font-weight: 500;
      font-size: 20px;
      line-height: 37px;
      letter-spacing: 0;
      text-align: center;
    }
    .rk-reviews__mobile {
      display: none;
    }
    .rk-reviews__img--mobile {
      width: 100%;
      height: auto;
      display: block;
    }
    .rk-reviews__panel--mobile {
      background: var(--panel-bg);
      padding: 24px 18px 32px;
      text-align: center;
    }
    .rk-reviews__desc p {
      margin: 0;
    }
    @media(max-width: 700px) {
      .rk-reviews__grid {
        display: none;
      }
      .rk-reviews__mobile {
        display: flex;
        flex-direction: column;
        justify-content: center;
      }
      .rk-reviews__title {
        margin: 0 0 9px;
        font-size: 20px;
        line-height: 36px;
      }
      .rk-reviews__desc {
        font-size: 16px;
        line-height: 26px;
      }
    }
  </style>
</section>
{% schema %}
  {
    "name": "Hero Grid Image",
    "settings": [
      {
        "type": "image_picker",
        "id": "left_image",
        "label": "Left image"
      },
      {
        "type": "image_picker",
        "id": "right_image",
        "label": "Right image"
      },
      {
        "type": "image_picker",
        "id": "mobile_image",
        "label": "Mobile image "
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      }, {
        "type": "richtext",
        "id": "description",
        "label": "Description"
      }, {
        "type": "color",
        "id": "bg_color",
        "label": "Panel background color",
        "default": "#E4F4F6"
      }
    ],
    "presets": [
      {
        "name": "Hero Grid Image"
      }
    ]
  }
{% endschema %}