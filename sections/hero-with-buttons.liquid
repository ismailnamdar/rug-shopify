<section class="hero-with-buttons">
  <div style="position: relative; width: 100%;">
    {% if section.settings.background_image != blank %}
      {{ section.settings.background_image | image_url: width: 2000 | image_tag:
       class: 'hero-with-buttons__image',
       widths: '400, 800, 1200, 1600, 2000',
       alt: section.settings.title,
       preload: true,
       height: 461 }}
    {% endif %}

    {% if section.settings.mobile_image != blank %}
      {{ section.settings.mobile_image | image_url: width: 2000 | image_tag:
       class: 'hero-with-buttons__image-mobile',
       widths: '400, 800, 1200, 1600, 2000',
       alt: section.settings.title,
       preload: true,
       height: 298 }}
    {% endif %}

    {% if section.settings.hide_overlay != true %}
      <div class="hero-with-buttons__image-overlay"></div>
    {% endif %}
  </div>

  <div class="hero-with-buttons__content">
    <h1 class="hero-with-buttons__title">{{ section.settings.title }}</h1>

    <div class="hero-with-buttons__buttons">
      {% if section.settings.button1_link != blank %}
        <a href="{{ section.settings.button1_link }}" class="btn hero-with-buttons__button-primary">
          {{ section.settings.button1_text }}
        </a>
      {% endif %}

      {% if section.settings.button2_link != blank %}
        <a href="{{ section.settings.button2_link }}" class="btn btn-outlined hero-with-buttons__button-primary">
          {{ section.settings.button2_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .hero-with-buttons {
    position: relative;
    text-align: center;
  }

  .hero-with-buttons__title {
    text-shadow: 0 2.46px 2.46px rgb(0, 0, 0, 0.49);
    color: white;
    font-size: 49px;
    line-height: 64px;
    font-family: "KG HAPPY Solid", sans-serif;
    margin: 0;
  }

  .hero-with-buttons__image {
    width: 100%;
    display: block;
    object-fit: cover;
  }

  .hero-with-buttons__image-overlay {
    background: rgba(77, 77, 77, 0.24);
    width: 100%;
    height: 100%;
    z-index: 1;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
  }

  .hero-with-buttons__image-mobile {
    display: none;
    object-fit: cover;
    width: 100%;
  }

  .btn-outlined {
    background-color: transparent;
    border: 1px solid white;
    display: flex;
    justify-content: center;
    align-items: center;
    font-weight: 800;
  }

  .btn-outlined:hover {
    border-color: #a9dd61;
  }

  .hero-with-buttons__content {
    position: absolute;
    top: 50%;
    left: 91px;
    z-index: 100;
    transform-origin: center left;
    transform: translateY(-50%);
    color: white;
  }

  .hero-with-buttons__buttons {
    margin-top: 37px;
    display: flex;
    gap: 22px;
  }

  .hero-with-buttons__button-primary {
    min-width: 230px;
    letter-spacing: 0;
  }

  @media screen and (max-width: 768px) {
    .hero-with-buttons__title {
      font-size: 30px;
      line-height: 40px;
      font-weight: 400;
      padding: 0 20px;
    }

    .hero-with-buttons {
      padding-bottom: 104px;
      display: flex;
      justify-content: center;
    }

    .hero-with-buttons__image {
      display: none;
    }

    .hero-with-buttons__image-mobile {
      display: block;
    }

    .hero-with-buttons__content {
      width: 100%;
      padding-top: 40px;
      padding-bottom: 10px;
      height: calc(100%);
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      top: 0;
      left: 0;
      transform-origin: center left;
      transform: none;
      color: white;
    }

    .hero-with-buttons__buttons {
      margin: 0 auto;
      flex-direction: column;
      gap: 13px;
      width: 100%;
      max-width: 301px;
    }

    .btn-outlined {
      color: #f3576b;
      border-color: #f3576b;
    }

    .hero-with-buttons__button-primary {
      min-width: unset;
    }
  }
</style>

{% schema %}
  {
    "name": "Hero with buttons",
    "settings": [
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Hero Image"
      },
      {
        "type": "image_picker",
        "id": "mobile_image",
        "label": "Mobile"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Gift Guide"
      },
      {
        "type": "text",
        "id": "button1_text",
        "label": "Button 1 Text",
        "default": "Gift a Subscription"
      }, {
        "type": "url",
        "id": "button1_link",
        "label": "Button 1 Link"
      }, {
        "type": "text",
        "id": "button2_text",
        "label": "Button 2 Text",
        "default": "Gift an Individual Kit"
      }, {
        "type": "url",
        "id": "button2_link",
        "label": "Button 2 Link"
      }, {
        "type": "checkbox",
        "id": "hide_overlay",
        "default": false,
        "label": "Hide Overlay"
      }
    ],
    "presets": [
      {
        "name": "Hero"
      }
    ]
  }
{% endschema %}