<div class="page-width">
  <h2 class="heading text-center">{{ section.settings.heading }}</h2>
  <div class="box-slider">
    {% for block in section.blocks %}
      <div>
        {% include 'image', _image: block.settings.image, size: '2048', sizes: '600,1024,2048' %}
      </div>
    {% endfor %}
  </div>
  <div class="flex flex-start wrap items">
    <div class="item item-1 flex flex-center wrap">
      {% include 'image', _image: section.settings.item-1-image, size: '150', alt: section.settings.item-1-title %}
      <div class="item-content">
        <h3>{{ section.settings.item-1-title }}</h3>
        <p>{{ section.settings.item-1-description }}</p>
      </div>
    </div>
    <div class="item item-2 flex flex-center wrap">
