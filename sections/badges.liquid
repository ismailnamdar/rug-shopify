{% assign sale_dummy_tag = "now" | date: "%s" | append: "-default-sale-badge" %}
{% assign sold_out_dummy_tag = "now" | date: "%s" | append: "-default-sold-out-badge" %}

<script>
  window.badges = {
    config: {
      saleDummyTag: {{sale_dummy_tag | json }},
      soldOutDummyTag: {{sold_out_dummy_tag | json }}
    }, 
    list: [
    {% if section.settings.sale_badge_text != blank %}
      {
        "tag": {{sale_dummy_tag | json }},
        "text": {{section.settings.sale_badge_text | json }},
        "position": {{section.settings.sale_badge_position | json }},
        "backgroundColor": {{section.settings.sale_badge_backgound_color | json }},
        "textColor": {{section.settings.sale_badge_text_color | json }},
        "showPdp": {{section.settings.sale_show_pdp | json }},
        "showMiniCart": {{section.settings.sale_show_mini_cart | json }}
      },
      {% endif %}
      {% if section.settings.sold_out_badge_text != blank %}
      {
        "tag": {{sold_out_dummy_tag | json }},
        "text": {{section.settings.sold_out_badge_text | json }},
        "position": {{section.settings.sold_out_badge_position | json }},
        "backgroundColor": {{section.settings.sold_out_badge_backgound_color | json }},
        "textColor": {{section.settings.sold_out_badge_text_color | json }},
        "showPdp": {{section.settings.sold_out_show_pdp | json }},
        "showMiniCart": {{section.settings.sold_out_show_mini_cart | json }}
      },
      {% endif %}
      {%- for block in section.blocks -%}
      {
        "tag": {{block.settings.badge_tag | json }},
        "text": {{block.settings.badge_text | json }},
        "position": {{block.settings.badge_position | json }},
        "backgroundColor": {{block.settings.badge_backgound_color | json }},
        "textColor": {{block.settings.badge_text_color | json }},
        "showPdp": {{block.settings.show_pdp | json }},
        "showMiniCart": {{block.settings.show_mini_cart | json }}
      },
      {%- endfor -%}
      
    ]
  }
</script>
{%- style -%}
  {{ section.settings.custom_styles }}
{%- endstyle -%}


<script src="{{ 'badges.js' | asset_url }}"></script>
{{ 'component-badges.css' | asset_url | stylesheet_tag }}

