<section class="multiple-image-cards" id="multiple-image-cards-{{ section.id }}">
  <div class="multiple-image-cards__container">
    {% if section.settings.heading or section.settings.subheading %}
      <header class="multiple-image-cards__header">
        {% if section.settings.heading %}<h2 class="multiple-image-cards__heading">{{ section.settings.heading }}</h2>{% endif %}
        {% if section.settings.subheading %}<p class="multiple-image-cards__subheading">{{ section.settings.subheading }}</p>{% endif %}
      </header>
    {% endif %}

    <div class="multiple-image-cards__grid">
      {% for block in section.blocks %}
        {% assign img1 = block.settings.image_1 %}
        {% assign img2 = block.settings.image_2 %}
        {% assign img3 = block.settings.image_3 %}
        

        <div
          class="multiple-image-card{% if block.settings.media_position == 'left' %} is-media-left{% endif %}"
          data-block-id="{{ block.id }}"
          style="
            background-color: {{ block.settings.bg_color }};
            --thumb-active: {{ block.settings.thumb_active_color | default: '#17c6a5' }};
            --thumb-active-rgb: {{ block.settings.thumb_active_color | default: '#17c6a5' | color_to_rgb }};
          "
          {{ block.shopify_attributes }}>


          <!-- CONTENT -->
          <div class="multiple-image-card__content">
            {% if block.settings.title %}
              <h3 class="multiple-image-card__title">
                {% if block.settings.icon_image %}
                  <img
                    class="multiple-image-card__icon-img"
                    src="{{ block.settings.icon_image | image_url: width: 56 }}"
                    alt="{{ block.settings.icon_alt | default: block.settings.title | escape }}"
                    width="" height=""
                    loading="lazy">
                {% endif %}
                {{ block.settings.title }}
              </h3>
            {% endif %}

            {% if block.settings.ages %}<p class="multiple-image-card__ages">{{ block.settings.ages }}</p>{% endif %}
            {%- assign mobile_desc = block.settings.text_mobile | default: block.settings.text -%}

            {% if block.settings.text %}
              <p class="multiple-image-card__text multiple-image-card__text--desktop">{{ block.settings.text }}</p>
            {% endif %}

            {% if mobile_desc %}
              <p class="multiple-image-card__text multiple-image-card__text--mobile">{{ mobile_desc }}</p>
            {% endif %}


            <div class="multiple-image-card__actions">
              {% if block.settings.btn1_label and block.settings.btn1_link %}
                <a class="btn multiple-image-card__btn" href="{{ block.settings.btn1_link }}">{{ block.settings.btn1_label }}</a>
              {% endif %}
              {% if block.settings.btn2_label and block.settings.btn2_link %}
                <a class="btn multiple-image-card__btn multiple-image-card__btn--secondary" href="{{ block.settings.btn2_link | append: block.settings.btn2_link_target }}">{{ block.settings.btn2_label }}</a>
              {% endif %}
            </div>
          </div>

          <!-- MEDIA -->
          <div class="multiple-image-card__media">
            <div class="multiple-image-card__image-area">
              {% if img1 %}
                <img
                  class="multiple-image-card__main"
                  id="main-{{ block.id }}-1"
                  src="{{ img1 | image_url: width: 800 }}"
                  srcset="
                    {{ img1 | image_url: width: 400 }} 400w,
                    {{ img1 | image_url: width: 800 }} 800w,
                    {{ img1 | image_url: width: 1200 }} 1200w
                  "
                  sizes="(min-width: 992px) 362px, 100vw"
                  width="362" height="331"
                  alt="{{ img1.alt | escape }}"
                  loading="lazy">
                {% endif %}
                {% if img2 %}
                <img
                  class="multiple-image-card__main"
                  id="main-{{ block.id }}-2"
                  src="{{ img2 | image_url: width: 800 }}"
                  srcset="
                    {{ img2 | image_url: width: 400 }} 400w,
                    {{ img2 | image_url: width: 800 }} 800w,
                    {{ img2 | image_url: width: 1200 }} 1200w
                  "
                  sizes="(min-width: 992px) 362px, 100vw"
                  width="362" height="331"
                  alt="{{ img2.alt | escape }}"
                  style="display: none;"
                  loading="lazy">
                {% endif %}
                {% if img3 %}
                <img
                  class="multiple-image-card__main"
                  id="main-{{ block.id }}-3"
                  src="{{ img3 | image_url: width: 800 }}"
                  srcset="
                    {{ img3 | image_url: width: 400 }} 400w,
                    {{ img3 | image_url: width: 800 }} 800w,
                    {{ img3 | image_url: width: 1200 }} 1200w
                  "
                  sizes="(min-width: 992px) 362px, 100vw"
                  width="362" height="331"
                  alt="{{ img3.alt | escape }}"
                  style="display: none;"
                  loading="lazy">
                {% endif %}
            </div>

            <div class="multiple-image-card__thumbs">
              {% for i in (1..3) %}
                {% assign key = 'image_' | append: i %}
                {% assign im = block.settings[key] %}
                {% if im %}
                  <button
                    type="button"
                    class="multiple-image-card__thumb{% if forloop.first %} is-active{% endif %}"
                    data-target="main-{{ block.id }}-{{ forloop.index }}"
                    data-block-id="{{ block.id }}"
                    aria-label="Select image {{ forloop.index }}">
                    <img src="{{ im | image_url: width: 120 }}" alt="{{ im.alt | escape }}" width="101" height="101" loading="lazy">
                  </button>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  /* Container & header */
  .multiple-image-cards__container{max-width:1200px;margin:0 auto;padding:50px 16px;}
  .multiple-image-cards__header{text-align:center;margin-bottom:18px;}
  .multiple-image-cards__heading{
    margin-top: 0;
    margin-bottom: 20px;
    color: #01BCBE;
    text-align: center;
    font-family: "KG HAPPY Solid", sans-serif;
    font-size: 40px;
    font-style: normal;
    font-weight: 400;
    line-height: 32px;
    letter-spacing: 0px;
  }
  .multiple-image-cards__subheading{
    margin: 0 0 40px;
    color: #4D4D4D;
    text-align: center;
    font-family: "KG HAPPY Solid", sans-serif;
    font-size: 22px;
    font-style: normal;
    font-weight: 400;
    line-height: 26px;
  }
  .multiple-image-cards__grid{display:grid;gap:40px;}

  /* Card */
  .multiple-image-card{
    display:grid;
    gap:30px;
    padding:28px;
    border-radius:16px;
    align-items:center;
    grid-template-columns:1fr auto; /* content | media by default (odd cards) */
    filter: drop-shadow(3px 4px 4px rgba(0, 0, 0, 0.11));
  }

  /* Content column */
  .multiple-image-card__content{text-align:center;padding:0 12px;}
  .multiple-image-card__title{
    margin:0 0 10px;
    font-size:32px;
    line-height:normal;
    font-weight:400;
    display:flex;
    gap:8px;
    justify-content:center;
    align-items:center;
    color: #4D4D4D;
    text-align: center;
    font-family: "KG HAPPY Solid", sans-serif;
  }

  .multiple-image-card__icon-img{width:28px;height:28px;object-fit:contain;display:inline-block;}
  .multiple-image-card__ages{
    margin:0 0 16px;
    color: #4D4D4D;
    text-align: center;
    font-family: Avenir;
    font-size: 20px;
    font-style: normal;
    font-weight: 800;
    line-height: 34px; /* 170% */
  }
  .multiple-image-card__text{margin:0 auto 22px;color:#374151;max-width:560px;line-height:1.8;}
  .multiple-image-card__actions{
    display:flex;
    gap:18px;
    justify-content:center;
    flex-wrap:wrap;
  }
  .multiple-image-card__btn{
    min-width: 225px;
    letter-spacing: 0px;
  }
  .multiple-image-card__btn--secondary{
    border: 2px solid #F3576B;
    color: #F3576B !important;
    background-color: white !important;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  /* default: show desktop text, hide mobile text */
  .multiple-image-card__text--mobile { display: none; }

  /* Media column */
  .multiple-image-card__media{display:flex;align-items:flex-start;gap:16px;}
  .multiple-image-card__image-area{flex:0 0 362px;}
  .multiple-image-card__main{width:362px;height:auto;border-radius:14px;display:block;object-fit:cover; aspect-ratio: 362 / 331;}
  .multiple-image-card__thumbs{flex:0 0 auto;display:flex;flex-direction:column;gap:14px;}
  .multiple-image-card__thumb{padding:0;border-radius:12px;border:3px solid transparent;background:transparent;cursor:pointer;width:101px;height:101px;}
  .multiple-image-card__thumb.is-active{  border-color: var(--thumb-active);  box-shadow: 0 0 0 2px rgba(var(--thumb-active-rgb), .15);  }
  .multiple-image-card__thumb:focus-visible{  outline: 2px solid var(--thumb-active);  outline-offset: 2px; }
  .multiple-image-card__thumb img{height: 100%; width: 100%; object-fit:cover;border-radius:10px;display:block;}

  @media (min-width: 992px){
  .multiple-image-card.is-media-left{ grid-template-columns: auto 1fr; }     /* media | content */
  .multiple-image-card.is-media-left .multiple-image-card__media{ flex-direction: row-reverse; } /* thumbs left of main */
  .multiple-image-card.is-media-left .multiple-image-card__content{ order: 2; }
  .multiple-image-card.is-media-left .multiple-image-card__media{ order: 1; }
}

.multiple-image-card__text--desktop {
  color: #4D4D4D;
  text-align: center;
  font-family: Avenir;
  font-size: 16px;
  font-style: normal;
  font-weight: 350;
  line-height: 34px;
  max-width: 450px;
}

.multiple-image-card__text--mobile {
  color: #4D4D4D;
  text-align: center;
  font-family: Avenir;
  font-size: 14px;
  font-style: normal;
  font-weight: 350;
  line-height: 20px;
}

  /* --- Mobile layout (≤991px) --- */
/* Odd cards (default): main LEFT, thumbs RIGHT */
/* Even cards (.is-even): thumbs LEFT, main RIGHT */
@media (max-width: 991px){
  .multiple-image-cards__container{padding:40px 20px;}
  .multiple-image-card__btn--secondary {
    border: none !important;
    background-color: transparent !important;
    text-decoration: underline;
    padding: 0;
    margin: 0;
    color: #F3576B;
    text-align: center;
    font-family: Avenir;
    font-size: 16px;
    font-style: normal;
    font-weight: 800;
    line-height: normal;
  }
  /* switch the card from grid to flex so we can reorder children */
  .multiple-image-card{
    display: flex;          /* override grid */
    flex-direction: column;
    padding: 18px;
  }

  .multiple-image-card__btn{
    min-width: 237px;
  }

  .multiple-image-card__actions {
    gap: 15px;
  }

  /* show media row first, content below */
  .multiple-image-card__media{ order: 1; }
  .multiple-image-card__content{ order: 2; text-align: center; }
  .multiple-image-card__title{font-size: 24px}
  .multiple-image-card__text--desktop { display: none; }
  .multiple-image-card__text--mobile { display: block; margin-bottom: 15px; }

  /* media row: odd = image,left  thumbs,right  | even = thumbs,left  image,right */
  .multiple-image-card__media{
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 11px;
    width: 100%;
  }
  .multiple-image-card{ display:flex; flex-direction:column; padding:18px; }
  .multiple-image-card__media{ order:1; display:flex; align-items:center; gap:10px; width:100%; }
  .multiple-image-card__content{ order:2; text-align:center; }

  /* Default (right): main then thumbs (thumbs on RIGHT) */
  .multiple-image-card:not(.is-media-left) .multiple-image-card__media{ flex-direction: row; }

  /* Left: thumbs on LEFT, main on RIGHT */
  .multiple-image-card.is-media-left .multiple-image-card__media{ flex-direction: row-reverse; }

  .multiple-image-card__main{ width:100%; height:auto; aspect-ratio:362/332; border-radius:12px; object-fit:cover; }
  .multiple-image-card__thumbs{ flex:0 0 100px; display:flex; flex-direction:column; gap:10px; justify-content:center; }
  .multiple-image-card__thumb img{ width:100px; height:80px; object-fit:cover; border-radius:10px; }

  /* sizing */
  .multiple-image-card__image-area{ flex: unset; }
  .multiple-image-card__main{
    width: 232px;
    height: 212px;
    aspect-ratio: 362 / 332;
    border-radius: 12px;
    object-fit: cover;
  }
  .multiple-image-card__thumbs{
    flex: 0 0 70px;
    display: flex;
    flex-direction: column;
    gap: 10px;
    justify-content: center;
  }
  .multiple-image-card__thumb{
    width: 65px;
    height: 65px;
    border-radius: 10px;
  }
  .multiple-image-card__thumb img{
    height: 100%;
    width: 100%;
    object-fit: cover;
  }
  .multiple-image-cards__heading{
    font-size: 26px;
    line-height: 35px;
  }
  .multiple-image-cards__subheading{
    font-size: 18px;
    line-height: 30px;
  }
  .multiple-image-card__title{
    font-size:24px;
    gap: 4px;
  }
  .multiple-image-card__ages{
    font-size: 18px;
    line-height: 18.666px;
  }
  .multiple-image-card__title {
    margin-bottom: 15px;
  }
  .multiple-image-card__ages {
    margin-bottom: 15px;
  }
}

</style>

<script>
  (function(){
    const root = document.getElementById('multiple-image-cards-{{ section.id }}');
    if(!root) return;
    root.addEventListener('click', function(e){
      const btn = e.target.closest('.multiple-image-card__thumb');
      if(!btn) return;
      const main = document.getElementById(btn.getAttribute('data-target'));
      const blockId = btn.getAttribute('data-block-id');
      if(!main || !blockId) return;

      const allImages = document.querySelectorAll(`[data-block-id="${blockId}"] .multiple-image-card__main`);
      allImages.forEach((t) => t.style.display = 'none');
      main.style.display = "block";
      
      btn.parentElement.querySelectorAll('.multiple-image-card__thumb').forEach(t => t.classList.remove('is-active'));
      btn.classList.add('is-active');
    }, {passive:true});
  })();
</script>

{% schema %}
{
  "name": "Multiple Image Cards",
  "settings": [
    { "type": "text", "id": "heading", "label": "Section title", "default": "Choose Your Club" },
    { "type": "text", "id": "subheading", "label": "Section subtitle", "default": "Start with a 1, 6, or 12 Month Plan – Delivered Monthly" }
    
  ],

  
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "settings": [
        { "type": "color", "id": "bg_color", "label": "Card background color", "default": "#E6F3F6" },
        { "type": "color", "id": "thumb_active_color", "label": "Selected thumbnail border", "default": "#17c6a5" },
        { "type": "image_picker", "id": "icon_image", "label": "Icon image (optional)" },
        { "type": "text", "id": "icon_alt", "label": "Icon alt text", "default": "Icon" },
        { "type": "text", "id": "title", "label": "Club title", "default": "Cooking Club" },
        { "type": "text", "id": "ages", "label": "Ages line", "default": "Ages 4–14+" },
        { "type": "textarea", "id": "text", "label": "Description", "default": "Fuel their passion with a monthly culinary adventure. Delicious recipes for dinner, dessert & more with a fun new theme each month." },
        { "type": "textarea", "id": "text_mobile", "label": "Description (mobile)", "info": "Optional. If empty, desktop description is used on mobile." },
        { "type": "image_picker", "id": "image_1", "label": "Image 1 (default large)" },
        { "type": "image_picker", "id": "image_2", "label": "Image 2" },
        { "type": "image_picker", "id": "image_3", "label": "Image 3" },
        { "type": "select",  "id": "media_position",  "label": "Images position (desktop)",  
          "options": [
            { "value": "right", "label": "Right of content" },
            { "value": "left",  "label": "Left of content" }
          ],
          "default": "right"
        },
        { "type": "text", "id": "btn1_label", "label": "Primary button label", "default": "Explore Cooking" },
        { "type": "url",  "id": "btn1_link",  "label": "Primary button link" },
        { "type": "text", "id": "btn2_label", "label": "Secondary button label", "default": "Choose Plan" },
        { "type": "url",  "id": "btn2_link",  "label": "Secondary button link" },
        {
          "type": "text",
          "id": "btn2_link_target",
          "label": "Link Target Section ID", 
          "info": "Target id of the section to scroll on click. Example: \"#subscription-builder-widget\""
        },
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    { "name": "Multiple Image Cards", "category": "Image", "blocks": [{ "type": "card" }] }
  ]
}
{% endschema %}
